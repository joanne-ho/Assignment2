{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Human Freedom Index Quartiles",
  "description": "Human Freedom Index Quartiles and Regions",
  "data": {
    "url": "https://raw.githubusercontent.com/joanne-ho/Assignment2/main/Vis6/data/hfi_cc_2019.csv"
  },
  "params": [
    {
    "name": "Selected_Year",
    "value": 2017,
    "bind": {
    "input": "range",
    "min": 2008,
    "max": 2017,
    "step": 1,
    "name": "Year"
    }
    }
    ],
  "transform": [
    {"filter": "datum.year == Selected_Year"},
    {"filter": "datum.hf_quartile != '-' "}
    ],

  "mark": "bar",
  "encoding": {
    "x": {
      "field": "hf_quartile",
      "type": "ordinal",
      "title": "HFI Quartiles"
    },
    "y": {
      "aggregate": "count",
      "type": "quantitative",
      "title": "Number of countries"
    },
    "color": {
      "field": "region",
      "type": "nominal",
      "scale": {
        "domain": [
              "Europe",
              "Middle East & North Africa",
              "East Asia & Oceania",
              "Caucasus, Central & South Asia",
              "Sub-Saharan Africa",
              "North America",
              "Latin America & the Caribbean"
            ],
            "range": [
              "#ab0c9f",
              "#f27d01",
              "#f51402",
              "#59afb1",
              "#258306",
              "#0b2192",
              "#adba12"
              
            ]
      },
      "title": "Regions"
    }
  }
  
}
