{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 600,
  "title": "Top Safety and Security Index Countries",
  "description": "Safety and Security Rankings 2017",
  "data": {
    "url": "https://raw.githubusercontent.com/joanne-ho/Assignment2/main/Vis3/data/hfi_cc_2019_one_year.csv"
  },
  "transform": [
    {
      "window": [{"op": "rank", "as": "rank"}],
      "sort": [{"field": "pf_ss", "order": "descending"}]
    },
    {"filter": "datum.rank <= 10"}
  ],
  "mark": "bar",
  "encoding": {
    "x": {"field": "pf_ss", "type": "quantitative"},
    "y": {
      "field": "countries",
      "type": "nominal",
      "sort": {"field": "pf_ss", "op": "average", "order": "descending"}
    }
  },
  "config": {}
}